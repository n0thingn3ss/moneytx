<div id='loading'>
    <div>loading...</div>
</div>
<div id='content'>
    <form action='/send-money' method='post' id='send-money-form'>
        <label>To:
            <input
                type='email'
                name='email'
                placeholder='email address'
                pattern='^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$'
                required />
            <span></span>
        </label>
        <label>Name:
            <input
                type='text'
                name='name'
                placeholder='name'
                required />
            <span></span>
        </label>
        <label>
            Amount: <span id='currency-symbol'>$</span>
            <input type="text" name="amount" placeholder='amount' required />
            <select name='currency-selector'>
                <option value='usd'>USD</option>
                <option value='eur'>EUR</option>
                <option value='jpy'>JPY</option>
            </select>
        </label>
        <label>Message (optional):
            <textarea name='msg' rows='3'></textarea>
        </label>
        <label>
            What's this payment for?
            <select name='reason'>
                <option value='family'>I'm sending money to family or friends</option>
                <option value='goods'>I'm paying for goods or servives</option>
            </select>
        </label>
    </form>
</div>
<footer>
    <div>
        <button id='clr'>Clear</button>
        <button id='next'>Next</button>
    </div>
</footer>

<!-- JS -->
<script src='js/send-money.js'></script>
